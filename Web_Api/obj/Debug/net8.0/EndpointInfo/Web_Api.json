  "components": {
    "schemas": {
      "ActualizarPasswordDTO": {
        "required": [
          "correo",
          "passwordActual",
          "passwordNuevo"
        ],
        "type": "object",
        "properties": {
          "correo": {
            "minLength": 1,
            "type": "string"
          },
          "passwordActual": {
            "minLength": 1,
            "type": "string"
          },
          "passwordNuevo": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "LoginDTO": {
        "required": [
          "correo",
          "password"
        ],
        "type": "object",
        "properties": {
          "correo": {
            "minLength": 1,
            "type": "string"
          },
          "password": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "UsuarioRegistroDTO": {
        "required": [
          "cargo",
          "correo",
          "dni",
          "nombre_completo",
          "password",
          "rol",
          "telefono"
        ],
        "type": "object",
        "properties": {
          "correo": {
            "minLength": 1,
            "type": "string"
          },
          "password": {
            "minLength": 1,
            "type": "string"
          },
          "rol": {
            "minLength": 1,
            "type": "string"
          },
          "nombre_completo": {
            "minLength": 1,
            "type": "string"
          },
          "dni": {
            "minLength": 1,
            "type": "string"
          },
          "telefono": {
            "minLength": 1,
            "type": "string"
          },
          "cargo": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "apiKey",
        "description": "Autenticación JWT usando el esquema Bearer. <<\r\n\nIngresa la palabra 'Bearer' seguido de un espacio y después su token en el campo de abajo.r\n\r\nEjemplo: \"Bearer adqweqdskdfl\"",
        "name": "Authorization",
        "in": "header"
      }
    }
  },
  "security": [
    {
      "Bearer": [ ]
    }
  ]
}